  "engines": {
    "node": "8.4.0"
  },
  "devDependencies": {
    "chalk": "^2.1.0",
    "dotenv": "^4.0.0",
    "flow-bin": "^0.53.1",
    "prettier": "^1.5.3"
  },
  "scripts": {
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
